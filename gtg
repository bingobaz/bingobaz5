<body>

  <h1>ورود مدیر سیستم</h1>

  <div class="form">
    <input type="password" id="adminPass" placeholder="رمز مدیریت">
    <button class="btn" onclick="login()">ورود</button>
    <div class="error" id="errorBox"></div>
  </div>

  <script>
    const ADMIN_PASSWORD = "bingo123"; // رمز عبور مدیر - بعداً قابل تغییر

    function login() {
      const pass = document.getElementById('adminPass').value.trim();
      const errorBox = document.getElementById('errorBox');

      if (pass === ADMIN_PASSWORD) {
        localStorage.setItem('bingobaz_admin', '1');
        window.location.href = 'admin-dashboard.html';
      } else {
        errorBox.innerText = 'رمز اشتباه است.';
      }
    }
  </script>

